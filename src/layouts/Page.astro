---
import Footer from "@components/Footer.astro";
import ThemeRadios from '@components/ThemeRadios.astro';
import BasePage from './BasePage.astro';

const { title } = Astro.props;
---
<BasePage>
  <ThemeRadios />
  <div id="page">
    {title && <h1 >{title}</h1>}
    <main>
        <slot />
    </main>
    <Footer />
  </div>
  
</BasePage>
<style>
  @import "@css/themes.less";
  :global(body) {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    height: 100vh;
    flex-wrap: wrap;
  }
  #page{
    flex: 1;
  }
</style>
