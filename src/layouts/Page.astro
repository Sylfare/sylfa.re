---
import Footer from "@components/Footer.astro";
import BasePage from './BasePage.astro';
import ThemeShow from "@components/themes/ThemeShow.astro";
import ThemeConfig from "./ThemeConfig.astro";

const { title } = Astro.props;
---
<BasePage>
  <ThemeConfig />
  {title && <h1 >{title}</h1>}
  <main>
      <slot />
  </main>
  <Footer />
  <ThemeShow />
</BasePage>
<style lang="less">
  @import "@css/themes.less";
  :global(body) {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    height: 100vh;
    flex-wrap: wrap;
  }
  #page{
    flex: 1;
  }
</style>

