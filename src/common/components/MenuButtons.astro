---
import Navigation from "./Navigation.astro"
---
<nav class="navbuttons">
    <ul>
        <slot />
    </ul>
</nav>

<style lang="less">
    @import (reference) "@css/themes.less";


    html.theme-98 nav ul {
      grid-column: 1/3;
      li {
        display: block;
      }
      display: grid;
      grid-template-columns: 1fr;
      gap: 10px;
      list-style-type: none;
      padding-left: 0px;
    }



  @media (min-width: @size-mobile) and (min-aspect-ratio: @aspect-ratio-mobile) {
    html.theme-98 nav {
      padding: 0;
      ul {
        grid-template-columns: 1fr 1fr;
      }
    }
  }
</style>