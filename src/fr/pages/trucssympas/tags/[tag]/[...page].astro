---
import TrucsSympas from "@layouts/TrucsSympas.astro";
import { getCollection } from 'astro:content';
import { initTrucsSympas } from "src/common/collections/trucssympas";
import type { Language } from "src/common/i18n/ui";


export const trucs = await initTrucsSympas("fr");
export const getStaticPaths = trucs.staticPathsTag;

const { tag } = Astro.params;
const { page, tagCount } = Astro.props;
---
<TrucsSympas { tag } postCount={trucs.postCount} {tagCount} {page} trucs={page.data} path="/trucssympas">
</TrucsSympas>