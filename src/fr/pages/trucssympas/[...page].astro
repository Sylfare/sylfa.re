---
import TrucsSympas from '@layouts/TrucsSympas.astro';
import { initTrucsSympas } from 'src/common/collections/trucssympas';
import type { Language } from 'src/common/i18n/ui';

export const trucs = await initTrucsSympas("fr");
export const getStaticPaths = trucs.staticPaths;

const { page } = Astro.props;
const links = {
    "en": "/coolthings"
};

---
<TrucsSympas {page} postCount={trucs.postCount} trucs={page.data} tagCount={trucs.tagCount} {links} path="/trucssympas">
 
</TrucsSympas>
